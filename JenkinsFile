pipeline {
    
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Install') { 
            steps {
                bat 'npm install'
            }
        }

        stage('Build') { 
            steps {
                bat 'npm run-script build'
            }
        }

        stage('Deploy') {
            steps {
                bat 'copy /build/* D:/dev/jenkins/repositories/react-app/build'
            }
        }
    }
}