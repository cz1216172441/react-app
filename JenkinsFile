pipeline {
    
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Install') { 
            steps {
                bat 'npm --registry https://registry.npm.taobao.org install'
            }
        }

        stage('Build') { 
            steps {
                bat 'npm run-script build'
            }
        }

        stage('Deploy') {
            steps {
                bat 'xcopy "build" "D:/dev/jenkins/repositories/react-app/build"'
            }
        }
    }
}